@model IEnumerable<quyettien.Models.BangSanPham>

@{
    ViewBag.Title = "Bảng Sản Phẩm";
}

<h2>Bảng Sản Phẩm</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
    <a href="@Url.Action("Create")" class="btn btn-primary">Thêm</a>
</p>
<table id="BangSanPham"  class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>
                Mã sản phẩm
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Giá bán
            </th>
            <th>
                Giá Gốc
            </th>
            <th>
                Giá góp
            </th>
            <th>
                Số lượng tồn
            </th>
            <th>
                Tên loại
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaSP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenSP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GiaBan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GiaGoc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GiaGop)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuongTon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoaiSanPham.TenLoai)
                </td>
                <td>
                    <a href="@Url.Action("Sửa", "Edit", new { id = item.id }) ">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                    <a href="@Url.Action("Xem", "Detail", new { id = item.id }) ">
                        <span class="glyphicon glyphicon-th-list"></span>
                    </a>
                    <a href="@Url.Action("Xóa", "Delete", new { id = item.id }) ">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
                </td>
            </tr>
        }
    </tbody>

</table>
@section scripts{
    <link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />

    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    }
<script>
    $(document).ready(function () {
        $('#BangSanPham').DataTable();
    });
</script>
