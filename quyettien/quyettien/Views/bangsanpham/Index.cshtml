@model IEnumerable<quyettien.Models.BangSanPham>

@{
    ViewBag.Title = "Bảng Sản Phẩm";
}

<h2>Bảng Sản Phẩm</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
    <a href="@Url.Action("Create")" class="btn btn-primary">Thêm</a>
</p>
<table class="table table-bordered table-condensed table-hover table-striped">
    <tr>
        <th>
            Mã sản phẩm
        </th>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Giá bán
        </th>
        <th>
             Giá Gốc
        </th>
        <th>
            Giá góp
        </th>
        <th>
            Số lượng tồn
        </th>
        <th>
            Tên loại
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaBan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaGoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaGop)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuongTon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiSanPham.TenLoai)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.id }, new { @class = "btn btn-danger" }) |
                @Html.ActionLink("Xem", "Details", new { id = item.id }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.id }, new { @class = "btn btn-warning" })
            </td>
        </tr>
    }

</table>
